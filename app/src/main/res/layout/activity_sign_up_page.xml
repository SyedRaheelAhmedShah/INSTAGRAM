<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <ImageView
        android:id="@+id/instagram_logo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginLeft="-10dp"
        android:src="@drawable/instagramlogo" />


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/instagram_logo"
        android:padding="20dp">

        <EditText
            android:id="@+id/first_Name_Signup_page"
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:layout_marginTop="10dp"
            android:background="@drawable/register_page_button"
            android:hint=" First Name"
            android:inputType="text" />

        <EditText
            android:id="@+id/last_Name_Signup_page"
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:layout_below="@+id/first_Name_Signup_page"
            android:layout_marginTop="20dp"
            android:background="@drawable/register_page_button"
            android:hint=" Last Name"
            android:inputType="text"
            android:visibility="visible" />

        <EditText
            android:id="@+id/email_Signup_page"
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:layout_below="@id/last_Name_Signup_page"
            android:layout_marginTop="20dp"
            android:background="@drawable/register_page_button"
            android:hint=" Email@gmail.com"
            android:inputType="textEmailAddress" />

        <EditText
            android:id="@+id/phone_Number_Signup_page"
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:layout_below="@id/email_Signup_page"
            android:layout_marginTop="20dp"
            android:background="@drawable/register_page_button"
            android:hint=" Phone"
            android:inputType="number" />

        <EditText
            android:id="@+id/first_password_Signup_page"
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:layout_below="@+id/phone_Number_Signup_page"
            android:layout_marginTop="20dp"
            android:background="@drawable/register_page_button"
            android:hint=" Password"
            android:inputType="textPassword|textCapCharacters|textWebPassword"
            android:visibility="visible" />

        <EditText
            android:id="@+id/confrim_Password_Signup_page"
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:layout_below="@+id/first_password_Signup_page"
            android:layout_marginTop="20dp"
            android:background="@drawable/register_page_button"
            android:hint=" Confirm Password"
            android:inputType="textPassword|textCapCharacters|textWebPassword"
            android:visibility="visible" />

        <Button
            android:id="@+id/login_button_From_login_page_"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/confrim_Password_Signup_page"
            android:layout_marginTop="50dp"
            android:backgroundTint="#007BFF"
            android:text="Sign Up"
            android:textColor="@color/white"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/youHaveAccount"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/login_button_From_login_page_"
            android:layout_marginTop="15dp"
            android:clickable="false"
            android:layout_centerInParent="true"
            android:text="You have account?"
            android:textColor="#686666"
            android:gravity="center"
            android:textSize="15sp" />

        <TextView
            android:id="@+id/loginPageFromsignup"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="3dp"
            android:layout_below="@id/login_button_From_login_page_"
            android:layout_marginTop="15dp"
            android:layout_toRightOf="@id/youHaveAccount"
            android:clickable="true"
            android:text="Log In"
            android:textColor="#007BFF"
            android:textSize="15sp" />

        <TextView
            android:id="@+id/homePageFromSignupPage"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/loginPageFromsignup"
            android:layout_centerInParent="true"
            android:layout_marginTop="20dp"
            android:layout_marginEnd="120dp"
            android:text="go to home screen"
            android:textColor="#838485"
            android:textSize="15sp" />


    </RelativeLayout>


</RelativeLayout>